generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id Int @id @default(autoincrement())
  username String
  password String

  profile Profile?
  chats Chat[]

  createdAt DateTime @default(now())
}

enum Gender {
  Male
  Female
  Other
}

enum Relationship {
  single
  married
  taken
  loveTriangle
  itsComplicated
  oneSided
}

model Profile {
  id Int @id @default(autoincrement())
  displayName String?
  profilePicture String?
  gender Gender?
  aboutMe String? // 200 chars max 
  likes String? // 200 chars max 
  dislikes String? // 200 chars max 
  country String?
  coverPicture String?
  relationship Relationship?
  interests String?
  user User @relation(fields: [userId], references: [id])
  userId Int @unique

}

enum ChatType {
  join
  left
  chat 
}

model Chat {
  id Int @id @default(autoincrement())
  message String
  type ChatType
  time DateTime @default(now())
  
  user User? @relation(fields: [userId], references: [id])
  userId Int?
} 